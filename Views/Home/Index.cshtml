        </section>
        <!-- =============== SECTION REGION .//END =============== -->

        <article class="my-4">
            <img src="~/Content/images/banners/ad-sm.png" class="w-100">
        </article>
    </div>
    <!-- container end.// -->
    <!-- ========================= SECTION SUBSCRIBE  ========================= -->
